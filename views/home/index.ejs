<!DOCTYPE html>
<html lang="pt-br" class="overflow-x-hidden max-h-screen">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="./lib/tailwind.js"></script>
    <title>iRango | Introdução</title>
</head>

<body class="font-sans bg-white h-screen overflow-hidden">

    <!-- Header -->
    <header class="w-screen h-[15vh] flex items-center justify-center text-white relative">
        <img src="/img/image.png" class="h-[9vh] w-auto absolute left-8 transition duration-300 filter brightness-200 saturate-0 hover:saturate-100 hover:brightness-100 hover:hue-rotate-345">
    </header>

    <!-- Main Content (bloqueando a rolagem) -->
    <main class="flex flex-col items-center justify-center h-[75vh] bg-white py-10 px-4 overflow-y-auto">

        <!-- Gerenciamento Section -->
        <section class="w-full max-w-4xl mb-10">
            <h2 class="text-2xl font-semibold text-gray-700 mb-4">Requisições de Entrada - Gerenciamento</h2>
            <table class="min-w-full table-auto border-collapse border border-gray-300">
                <thead>
                    <tr>
                        <th class="px-4 py-2 text-left border-b border-gray-300">ID da Requisição</th>
                        <th class="px-4 py-2 text-left border-b border-gray-300">PC</th>
                        <th class="px-4 py-2 text-left border-b border-gray-300">Ação</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="px-4 py-2 border-b border-gray-300">001</td>
                        <td class="px-4 py-2 border-b border-gray-300">PC-01</td>
                        <td class="px-4 py-2 border-b border-gray-300 flex space-x-2">
                            <button class="bg-green-500 text-white py-1 px-4 rounded hover:bg-green-600">Aceitar</button>
                            <button class="bg-red-500 text-white py-1 px-4 rounded hover:bg-red-600">Recusar</button>
                        </td>
                    </tr>
                    <!-- Outros pedidos -->
                </tbody>
            </table>
        </section>

        <!-- Cozinha Section -->
        <section class="w-full max-w-4xl mb-10">
            <h2 class="text-2xl font-semibold text-gray-700 mb-4">Requisições de Entrada - Cozinha</h2>
            <table class="min-w-full table-auto border-collapse border border-gray-300">
                <thead>
                    <tr>
                        <th class="px-4 py-2 text-left border-b border-gray-300">ID da Requisição</th>
                        <th class="px-4 py-2 text-left border-b border-gray-300">PC</th>
                        <th class="px-4 py-2 text-left border-b border-gray-300">Ação</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="px-4 py-2 border-b border-gray-300">002</td>
                        <td class="px-4 py-2 border-b border-gray-300">PC-02</td>
                        <td class="px-4 py-2 border-b border-gray-300 flex space-x-2">
                            <button class="bg-green-500 text-white py-1 px-4 rounded hover:bg-green-600">Aceitar</button>
                            <button class="bg-red-500 text-white py-1 px-4 rounded hover:bg-red-600">Recusar</button>
                        </td>
                    </tr>
                    <!-- Outros pedidos -->
                </tbody>
            </table>
        </section>

        <!-- Atendimento Section -->
        <section class="w-full max-w-4xl">
            <h2 class="text-2xl font-semibold text-gray-700 mb-4">Requisições de Entrada - Atendimento</h2>
            <table class="min-w-full table-auto border-collapse border border-gray-300">
                <thead>
                    <tr>
                        <th class="px-4 py-2 text-left border-b border-gray-300">ID da Requisição</th>
                        <th class="px-4 py-2 text-left border-b border-gray-300">PC</th>
                        <th class="px-4 py-2 text-left border-b border-gray-300">Ação</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="px-4 py-2 border-b border-gray-300">003</td>
                        <td class="px-4 py-2 border-b border-gray-300">PC-03</td>
                        <td class="px-4 py-2 border-b border-gray-300 flex space-x-2">
                            <button class="bg-green-500 text-white py-1 px-4 rounded hover:bg-green-600">Aceitar</button>
                            <button class="bg-red-500 text-white py-1 px-4 rounded hover:bg-red-600">Recusar</button>
                        </td>
                    </tr>
                    <!-- Outros pedidos -->
                </tbody>
            </table>
        </section>

    </main>

</body>

</html>
